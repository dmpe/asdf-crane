#!/bin/bash
# https://asdf-vm.com/plugins/create.html#bin-list-all
# "Note that the newest version should be listed last so it appears closer to the user's prompt."

github_repo="https://api.github.com/repos/google/go-containerregistry/releases"

declare -g _cmd

_cmd=(curl --silent)

if [ -n "$GITHUB_API_TOKEN" ]; then
  _cmd+=("-H 'Authorization: token $GITHUB_API_TOKEN'")
  _cmd="${_cmd[@]} $github_repo"
fi

# https://github.com/rbenv/ruby-build/pull/631/files#diff-fdcfb8a18714b33b07529b7d02b54f1dR942
_sort_versions() {
  sed 'h; s/[+-]/./g; s/.p\([[:digit:]]\)/.z\1/; s/$/.z/; G; s/\n/ /' | \
    LC_ALL=C sort -t. -k 1,1 -k 2,2n -k 3,3n -k 4,4n -k 5,5n | awk '{print $2}'
}

# find all tag_name": "v0.11.2", and remove all beta versions - then sort
versions=$(eval $_cmd | grep -oE "tag_name\": *\".{1,15}\"," | sed 's/tag_name\": *\"v//;s/\",//' | _sort_versions)

echo $versions
